# Use Node.js LTS
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Create data directory for SQLite
RUN mkdir -p /app/data

# Expose port
EXPOSE 3010

# Start development server with hot reload
CMD ["npm", "run", "dev"]